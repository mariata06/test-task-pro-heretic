mixin cta()
  .cta

    .container
      .cta__content
        .cta__img
          +img("content", "cta-bg", "png", "", "", "cta bg image")
        .cta__form

          h2.title.title--h1.cta__title <span>форма заявки</span>
            | Заказать очищение

          form(action="#" id="myForm").form

            .form__input-wrapper
              label(for="name")
                input(type="text" id="name" placeholder="Ваше ФИО")
                span(class="error-message" id="nameError" style="display: none;")
                span(class="input-icon")
                  +img("content", "icon-user", "png", "", "", "icon user")
            .form__input-wrapper
              label(for="email")
                input(type="email" id="email" placeholder="E-mail")
                span(class="error-message" id="emailError" style="display: none;")
                span(class="input-icon")
                  +img("content", "icon-envelope", "png", "", "", "icon envelope")
            .form__input-wrapper
              label(for="phone")
                input(type="tel" id="phone" placeholder="Телефон")
                span(class="error-message" id="phoneError" style="display: none;")
                span(class="input-icon")
                  +img("content", "icon-phone", "png", "", "", "icon phone")

            button(type="submit").cta__submit.btn.btn--orang-bg Отправить
